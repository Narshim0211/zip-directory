# Time Management Microservice Configuration

# Server
NODE_ENV=development
PORT=5001

# Database
MONGODB_URI=mongodb://localhost:27017/time-service-db
DB_NAME=time-service-db

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Auth Service (for JWT validation)
AUTH_SERVICE_URL=http://localhost:5000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# Email Service (for reminders)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@salonhub.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=SalonHub <noreply@salonhub.com>

# SMS Service (for reminders) - Optional
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Feature Flags
ENABLE_VISITOR_REMINDERS=true
ENABLE_OWNER_REMINDERS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
